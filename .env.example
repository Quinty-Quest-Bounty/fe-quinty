# Copy this file to .env.local and fill in your values

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Optional: Custom RPC endpoint for Base Sepolia
NEXT_PUBLIC_BASE_SEPOLIA_RPC=https://sepolia.base.org

# IPFS settings for file uploads
# Get a JWT from https://app.pinata.cloud/keys
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_here

# X OAuth for Social Verification
# Get credentials from: https://developer.twitter.com/en/portal/dashboard
NEXT_PUBLIC_TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# App URL (for OAuth callback)
NEXT_PUBLIC_APP_URL=http://localhost:3000
